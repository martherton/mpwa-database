<section class="corporates">	

		<div class="fullsearch" >
			<ul>
			<li>
			<%= simple_form_for :fullsearch, url: corporates_path, method: :get do |f| %>
			<h4>Country</h4><%= f.input :country, label: false %>
			<%= f.button :submit, "filter" %>
			<% end %>
			</li>
			<li>
			<%= simple_form_for :fullssearch, url: corporates_path, method: :get do |f| %>
			<h4>Sector</h4><%= f.input :sector, label: false, collection: ["Consumer Discretionary","Consumer Staples","Industrials","Materials","Energy","Telecoms","Utilities","Financials","Healthcare","IT"] %>
			<%= f.button :submit, "filter" %>
			<% end %>
			</li>
			</ul>
		</div>	


		<div class="login" id="corpsearch" >
					<%= simple_form_for :search, url: corporates_path, method: :get do |f| %>
          <h4>Search</h4><%= f.input :q, label: false %>
          <% end %>
    </div>       

<% if params[:search].present? %><%= link_to "Full list", corporates_path %><% end %>
<% if params[:fullsearch].present? %><%= link_to "Full list", corporates_path %><% end %>
<% if params[:fullssearch].present? %><%= link_to "Full list", corporates_path %><% end %>


<% if current_user? %>
<%= link_to "Create", new_corporate_path %>
<% end %>
		
			<% @corporates.each do |corporate| %>
				
					<div class="corporate">
						
						<div>
							<% @c = Country.new(corporate.country) %>
							<ul>
							<li><h1><%= link_to corporate.name, corporate_path(corporate.id) %></h1></li>
							<li><h2><%= @c.name %></h2></li>
							<li><h2><%= corporate.sector %></h2></li>
							</ul>	
							
						</div>		
				
					</div>
					<hr>
				<% end %>
			

					
	</section>