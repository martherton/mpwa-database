<div class="newopen" >
<h2>Edit the document</h2>

<%= simple_form_for [@user, @download], url: download_path, method: :put do |f| %>

	<h4>Title</h4><%= f.input :title, label: false %>
	<h4>Description</h4><%= f.input :description, label: false %>
	<h4>Item Order</h4><%= f.input :itemorder, label: false %>
	<h4><%= @download.docupload_file_name%></h4><%= f.input :docupload, label: false %>
	
	
	<%= f.button :submit, "Edit Document" %>
	* Required field
<% end %>
</div>